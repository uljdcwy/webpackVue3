{
    "compilerOptions": {
        "target": "ES6",
        "strict": true,
        "baseUrl": ".",
        "allowJs": true, // TS指向JS有用
        "checkJs": true, // 检查JS中的TS
        "noEmit": true,
        "moduleResolution": "NodeNext",
        "allowImportingTsExtensions": true,
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@wasm/*": [
                "wasmModule/*"
            ],
            "@node/*": [
                "nodeModule/*"
            ],
            "@public/*": [
                "public/*"
            ],
            "@api/*": [
                "moduleApi/*"
            ],
            "@types/*": [
                "types/*"
            ]
        }
    },
    "exclude": [
        "public/"
    ],
    "include": [
        "@types/*", // 引入类型文件
        "src/", // 在文件中引用TS检查
        "moduleApi/", // 自定义的moduleApi
        "webpackLoads/",
        "webpackPlugins/",
        "Services/",
        "pages/",
        "preloads/",
        "Services/middle/EncryptionType.ts"
    ],
}