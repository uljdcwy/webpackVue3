{
  "name": "vuebuild",
  "version": "1.0.0",
  "description": "VUE打包",
  "private": true,
  "author": "艾迪泰格",
  "main": "src/electron.js",
  "scripts": {
    "dev": "webpack --env ENV=development target=web webpack.config.js",
    "build": "webpack --env ENV=production target=web webpack.config.js",
    "build-renderer": "webpack --env ENV=production target=electron-renderer webpack.config.js",
    "build-preload": "webpack --env ENV=production target=electron-preload webpack.config.js",
    "build-server": "webpack --env ENV=production target=node webpack.config.js",
    "dev-electron": "electron src/electron.js development",
    "build-electron": "electron-builder"
  },
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "babel-loader": "^8.2.5",
    "cache-loader": "^4.1.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.3",
    "electron": "^23.1.0",
    "electron-builder": "^23.6.0",
    "happypack": "^5.0.1",
    "html-webpack-plugin": "^5.5.0",
    "koa": "^2.14.1",
    "less": "^4.1.3",
    "less-loader": "^11.1.0",
    "mini-css-extract-plugin": "^2.7.2",
    "pm2": "^5.2.2",
    "postcss-cssnext": "^3.1.1",
    "postcss-loader": "^7.0.1",
    "sass": "^1.58.3",
    "sass-loader": "^13.2.0",
    "speed-measure-webpack-plugin": "^1.5.0",
    "style-loader": "^3.3.1",
    "terser-webpack-plugin": "^5.3.6",
    "thread-loader": "^3.0.4",
    "vue-loader": "^17.0.0",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-merge": "^5.8.0"
  },
  "files": [
    "./electron-renderer"
  ],
  "build": {
    "productName": "艾迪泰格测试项目",
    "appId": "com.mycompany|electron",
    "asarUnpack": [
      "./node/**"
    ],
    "directories": {
      "buildResources": ""
    },
    "win": {
      "icon": "public/favicon.ico",
      "target": [
        "nsis",
        "msi"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "snap",
        "AppImage"
      ]
    }
  },
  "dependencies": {
    "vue": "^3.2.47"
  }
}
